doctype xml
Orders(apiKey=ENV['NEWGISTICS_KEY'])
  Order(orderID="#{order.number} - #{shipment.id}")
    CustomerInfo
      - order.ship_address do |address|
        FirstName= address.first_name
        LastName= address.last_name
        Address1= address.address1
        Address2= address.address2
        City= address.city
        State= address.state
        Zip= address.postal_code
        Country= address.country
        Email= order.email
        Phone= address.phone
        IsResidential= (address.type == 'residential')
    AllowDuplicate
    OrderDate= order.completed_at.strftime('%m/%d/%Y')
    ShipMethod= order.ship_method
    InfoLine= order.options[:info]
    RequiresSignature= order.options[:signature]
    Items
      - order.line_items.each do |item|
        Item
          SKU= item.sku
          Qty= item.quantity